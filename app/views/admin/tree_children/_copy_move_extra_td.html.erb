<% @stylesheets << 'admin/copy_move' %>
<td class="copy-move">
<% unless simple || !(Page === page)-%>
  <%= link_to image('copy-move', :alt => 'CopyMove'), copy_move_index_url(:id => page) %><% end %>
</td>

<% unless simple %> 
  <td class="copy-move">
    <%= link_to_function image('copy-move', :alt => 'CopyMove'), "$(this).next('ul').toggle();Event.stop(event);" %>
    <ul class="popup-menu" style="display:none">
      <li><%= link_to "Copy page only", copy_page_admin_page_url(page), :style =>"background-image: url(/images/admin/page_white.png)" %></li>
      <li><%= link_to "Copy with first-level children", copy_children_admin_page_url(page), :style =>"background-image: url(/images/admin/page_white_copy.png)" %></li>
      <li><%= link_to "Copy whole subtree", copy_tree_admin_page_url(page), :style =>"background-image: url(/images/admin/page_white_stack.png)" %></li>
      <li><%= link_to "Move entire subtree", move_admin_page_url(page), :style =>"background-image: url(/images/admin/page_white_go.png)" %></li>
    </ul>
  </td>
<% end %>